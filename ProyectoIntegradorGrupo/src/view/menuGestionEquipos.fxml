<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="30" style="-fx-background-color: #E3F2FD;" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GestionEquiposMenuController">

    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>

    <!-- Título del Módulo -->
    <Label style="-fx-font-size: 26px; -fx-text-fill: #000000; -fx-font-weight: bold;" text="Módulo de Gestión de Equipos">
        <effect>
            <DropShadow color="#90CAF9" radius="3" />
        </effect>
        <font>
            <Font name="Arial" size="26" />
        </font>
    </Label>

    <!-- Botón para Gestionar Equipos -->
    <Button fx:id="btnGestionarEquipos" onAction="#abrirGestionEquipos" prefHeight="60" prefWidth="500" styleClass="button button-blue" text="Gestionar Equipos" wrapText="true">
        <effect>
            <DropShadow color="#1E88E5" offsetX="2" offsetY="2" radius="5" />
        </effect>
    </Button>

    <!-- Botón para Ver Equipos Reservados -->
    <Button fx:id="btnEquiposReservados" onAction="#abrirEquiposReservados" prefHeight="60" prefWidth="500" styleClass="button button-light-blue" text="Ver Equipos Reservados" wrapText="true">
        <effect>
            <DropShadow color="#1E88E5" offsetX="2" offsetY="2" radius="5" />
        </effect>
    </Button>

    <!-- Botón para Ver Historial de Reservas de Equipos -->
    <Button fx:id="btnHistorialEquipos" onAction="#abrirHistorialEquipos" prefHeight="60" prefWidth="500" styleClass="button button-blue" text="Ver Historial De Reservas De Equipos" wrapText="true">
        <effect>
            <DropShadow color="#1E88E5" offsetX="2" offsetY="2" radius="5" />
        </effect>
    </Button>

</VBox>
